{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "pretty": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": ["dist/**"]
}